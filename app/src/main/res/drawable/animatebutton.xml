<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
<item android:state_pressed="true">
    <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle">
        <gradient android:centerColor="#77ef3b" android:startColor="#77ef3b" android:endColor="#77ef3b" ></gradient>
        <stroke android:color="#c1edaa" android:width="3dp"></stroke>
        <corners android:radius="100dp"></corners>
    </shape>


</item>


    <item android:state_pressed="false">
        <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle">
            <gradient android:centerColor="#fff" android:startColor="#fff" android:endColor="#ffffff" ></gradient>

            <corners android:radius="100dp"></corners>
        </shape>

    </item>
</selector>